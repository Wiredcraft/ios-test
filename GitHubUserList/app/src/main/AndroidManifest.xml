<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yxf.githubuserlist">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".app.GitHubApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_github_svg"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GitHubUserList">
        <meta-data
            android:name="design_width_in_dp"
            android:value="420" />

        <activity
            android:name=".module.userlist.UserListActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.GitHubUserList.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>